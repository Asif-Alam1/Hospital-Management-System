generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Prisma schema

model User{
  id   String @id @unique
  Password String
}


model Department {
  id        String   @id @default(cuid())
  name      String   @unique
  location  String
  doctors   Doctor[]
}
model Doctor {
  id          String   @id @default(cuid())
  name        String
  department  Department  @relation(fields: [DepartmentId], references: [id])
  DepartmentId String
  patients    Patient[]
  appointments Appointment[]

  @@unique([DepartmentId])
}

model Patient {
  id        String   @id @default(cuid())
  name      String
  age       Int
  doctor    Doctor  @relation(fields: [doctorId], references: [id])
  doctorId  String
  appointments Appointment[]
  @@unique([doctorId])
}

model Appointment {
  id          String   @id @default(cuid())
  doctorId    String
  patientId   String
  date        DateTime
  doctor      Doctor  @relation(fields: [doctorId], references: [id])
  patient     Patient  @relation(fields: [patientId], references: [id])
}